{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "noImplicitAny": false,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
